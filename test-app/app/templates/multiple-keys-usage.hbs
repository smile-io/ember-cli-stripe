{{!- BEGIN-SNIPPET multiple-keys-usage-config-key }}
{{!-- Uses Stripe API key from configuration file --}}
<StripeCheckout
  @name="Sweet Tooth"
  @description="Description using config key"
  @amount={{2500}}
  @label="Subscribe $25"
  @panelLabel="Subscribe {{@amount}}/mo"
  @onToken={{fn this.checkoutToken 2500}}
/>
{{!- END-SNIPPET }}

{{!- BEGIN-SNIPPET multiple-keys-usage-custom-key }}
{{!-- Uses custom Stripe API key that overwrites configuration file one --}}
<StripeCheckout
  @key="pk_test_ziVVFivwOqMSHF3wYFI7WodB"
  @name="Sweet Tooth"
  @description="Description using new Stripe key"
  @amount={{3000}}
  @label="Subscribe $30"
  @panelLabel="Subscribe for {{@amount}}/mo"
  @onToken={{fn this.checkoutToken 3000}}
/>
{{!- END-SNIPPET }}

<h2>Multiple keys usage</h2>
<p>
  The addon also supports using different Stripe API keys on the same page (ex: <i>a marketplace</i>).
</p>
<p>
  First Stripe checkout component uses the API key from the configuration file,
  while the second uses a custom one, passed directly to the component which overwrites
  the default configuration one.
  <CodeSnippet @name="multiple-keys-usage-config-key.hbs" />
  <CodeSnippet @name="multiple-keys-usage-custom-key.hbs" />
</p>
